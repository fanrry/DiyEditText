<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_centerVertical="true"
        android:background="@drawable/focus_eidt_text"
        android:paddingLeft="12dp"
        android:paddingRight="15dp"
        android:textColor="@color/black_333333"
        android:textCursorDrawable="@drawable/cursor_shape" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="电话号码"
        android:textColor="@color/black_999999"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/diy_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/diy_edit_error"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@mipmap/error"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/diy_edit_eye"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:src="@mipmap/hide_pwd"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/diy_edit_delet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/edit_clear"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>